<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".StudentListActivity">
    <include
        layout="@layout/layout_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <Button
                android:id="@+id/button_student1"
                style="@style/HomeButton"
                android:text="@string/student_list_button1"
                />

            <Button
                android:id="@+id/button_student2"
                style="@style/HomeButton"
                android:text="@string/student_list_button2" />

            <Button
                android:id="@+id/button_student3"
                style="@style/HomeButton"
                android:text="@string/student_list_button3" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>